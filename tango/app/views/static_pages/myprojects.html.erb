<div padding="0px" class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
  <h3 class="w3-bar-item">Menu</h3>
  <a href="/projects" class="w3-bar-item w3-button">All Projects</a>
  <a href="/myprojects" class="w3-bar-item w3-button">My Projects</a>
</div>
<p id="notice"><%= notice %></p>


<div style="margin-left:15%">

<h1> My projects </h1>





<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Githuburl</th>
      <th>Progress</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Project.all.each do |project| %>
	  <% if project.user_id == current_user.id %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.githuburl %></td>
        <td><%= project.progress %></td>
        <td><%= project.owner %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Project', new_project_path %>


</div>