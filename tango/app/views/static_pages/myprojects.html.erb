
<h1> My Projects </h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Githuburl</th>
      <th>Progress</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Project.all.each do |project| %>
	  <% if project.user_id == current_user.id %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.githuburl %></td>
        <td><%= project.progress %></td>
        <td><%= project.owner %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<div align="center" text-color="white">
<%= link_to 'New Project', new_project_path, { :class=>"btn btn-default button", :id=>"button" } %>
</div>

</div>