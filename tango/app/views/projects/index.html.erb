<% if user_signed_in? %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>All Projects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Github Page</th>
      <th>Progress</th>
      <th>Dev</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.sort_by{|proj| proj.progress}.reverse.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td>
        <% if project.githuburl %>
        <%= link_to 'View', project.githuburl, :id => "button", :class => "btn" %>
        <% else %>
        None
        <% end %>
        </td>

        <td>
        <div class='progress progress-striped'>
        <div class="progress-bar progress-bar-warning" role="progressbar" style="width: <%=project.progress%>%;">
          <%=project.progress%>%
        </div>
      </div>
      </td>
      <td><%= project.dev %></td>

      <td>
        <% if user_signed_in? && !current_user.ngo? && !project.dev %>
          <%= link_to 'Tango', edit_project_path(project), :id => "button", :class => "btn" %>
        <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
